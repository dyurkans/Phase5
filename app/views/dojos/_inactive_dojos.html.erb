<% if @inactive_dojos.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>Address</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_dojos.each do |dojo| %>
        <tr>
          <td><%= link_to dojo.name, dojo_path(dojo) %></td>
          <td><%= dojo.full_address %></td>
  				<td>
            <%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_dojo_path(dojo), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="digg_pagination">
    <div clas="page_info">
      <%= page_entries_info @dojos %>
    </div>
    <%= will_paginate @dojos, :param_name => 'inactive_dojo_page', :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
  </div>
<% end %>